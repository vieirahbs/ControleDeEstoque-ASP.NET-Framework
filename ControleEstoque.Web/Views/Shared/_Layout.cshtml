@model ControleEstoque.Web.Models.LoginViewModel
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Controle de estoque</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Controle de estoque", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse ">
                @if (Request.IsAuthenticated)@*Valida se o usuário está logado*@
                {
                    <ul class="nav navbar-nav">
                        @*Determina que a lista (ul) fique lateralizada*@
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Cadastros
                                <span class="caret"></span>@*Setinha para baixo apenas*@
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Grupos de produtos", "GrupoProduto", "Cadastro")</li>
                                    <li>@Html.ActionLink("Marcas de produtos", "MarcaProduto", "Cadastro")</li>
                                    <li>@Html.ActionLink("Locais de armazenamento", "LocalArmazenamento", "Cadastro")</li>
                                    <li>@Html.ActionLink("Unidade de medida", "UnidadeMedida", "Cadastro")</li>
                                    <li>@Html.ActionLink("Produtos", "Produto", "Cadastro")</li>
                                    <li class="nav-divider"></li>
                                    @*Adiciona linha divisória*@
                                    <li>@Html.ActionLink("Paises", "Pais", "Cadastro")</li>
                                    <li>@Html.ActionLink("Estados", "Estado", "Cadastro")</li>
                                    <li>@Html.ActionLink("Cidades", "Cidade", "Cadastro")</li>
                                    <li>@Html.ActionLink("Fornecedores", "Fornecedor", "Cadastro")</li>
                                    <li class="nav-divider"></li>
                                    <li>@Html.ActionLink("Perfis de usuários", "PerfilUsuario", "Cadastro")</li>
                                    <li>@Html.ActionLink("Usuários", "Usuario", "Cadastro")</li>
                                </ul>
                            </a>

                        </li>

                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Operações
                                <span class="caret"></span>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Entrada de produtos", "EntradaEstoque", "Operacao")</li>
                                    <li>@Html.ActionLink("Saída de produtos", "SaidaEstoque", "Operacao")</li>
                                    <li>@Html.ActionLink("Lançamento de perdas de produtos", "LancPerdaProduto", "Operacao")</li>
                                    <li>@Html.ActionLink("Inventário de estoque", "Inventario", "Operacao")</li>
                                </ul>
                            </a>
                        </li>

                        <li>
                            <a href="#" class="dropdown-toogle" data-toggle="dropdown">
                                Relatórios
                                <span class="caret"></span>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Posição de estoque", "PosicaoEstoque", "Relatorio")</li>
                                    <li>@Html.ActionLink("Ressuprimento", "Ressuprimento", "Relatorio")</li>
                                </ul>
                            </a>
                        </li>

                        <li>
                            <a href="#" class="dropdown-toogle" data-toggle="dropdown">
                                Gráficos
                                <span class="caret"></span>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Perdas por mês", "PerdaMes", "Grafico")</li>
                                    <li>@Html.ActionLink("Entradas vs saídas por mês ", "EntradaSaidaMes", "Grafico")</li>
                                </ul>
                            </a>
                        </li>


                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Sobre", "Sobre", "Home")</li>
                        <li><a href="#">Olá @User.Identity.Name</a></li>
                        @using (Html.BeginForm("Logout", "Conta", FormMethod.Post, new { id = "LogoutForm" }))
                        {
                            <li>
                                <a href="javascript:document.getElementById('LogoutForm').submit()">Sair</a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Login", "Login", "Conta")</li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Controle de estoque</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
